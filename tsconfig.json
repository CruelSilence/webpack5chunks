{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "target": "es5",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "downlevelIteration": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "*": ["./src/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src",
    "./node_modules/@types"
  ],
  "exclude": [
    "**/*.js"
  ]
}
